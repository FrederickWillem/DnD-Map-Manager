<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ToolkitController">
   <children>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="298.0">
         <children>
            <VBox prefHeight="398.0" prefWidth="296.0">
               <children>
                  <Label alignment="CENTER" prefHeight="57.0" prefWidth="296.0" text="Selection Menu">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
                  <Accordion prefHeight="344.0" prefWidth="296.0">
                    <panes>
                      <TitledPane animated="false" text="Tiles">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                        </content>
                      </TitledPane>
                      <TitledPane animated="false" text="Enemies">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                        </content>
                      </TitledPane>
                      <TitledPane animated="false" prefHeight="266.0" prefWidth="296.0" text="Players">
                        <content>
                          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="258.0" prefWidth="294.0" />
                        </content>
                      </TitledPane>
                    </panes>
                  </Accordion>
               </children>
            </VBox>
         </children>
      </AnchorPane>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="279.0">
         <children>
            <VBox prefHeight="398.0" prefWidth="279.0">
               <children>
                  <Label alignment="CENTER" prefHeight="40.0" prefWidth="279.0" text="Import texture as...">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="46.0" prefWidth="279.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addTile" prefHeight="25.0" prefWidth="47.0" text="Tile" />
                        <Button mnemonicParsing="false" text="Enemy" />
                        <Button mnemonicParsing="false" text="Player" />
                     </children>
                  </HBox>
                  <BorderPane>
                     <center>
                        <ImageView fx:id="imgView" fitHeight="150.0" fitWidth="265.0" pickOnBounds="true" preserveRatio="true" />
                     </center>
                  </BorderPane>
                  <ScrollPane prefHeight="200.0" prefWidth="200.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                  </ScrollPane>
                  <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
			        <items>
			          <Button fx:id="btnAdd" disable="true" mnemonicParsing="false" onAction="#btnAddClick" text="Add" />
			        </items>
			      </ToolBar>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      
   </children>
</HBox>
