<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="455.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ToolkitController">
   <children>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="348.0">
         <children>
            <VBox prefHeight="398.0" prefWidth="296.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label alignment="CENTER" prefHeight="57.0" prefWidth="296.0" text="Selection Menu">
                     <font>
                        <Font size="35.0" />
                     </font>
                  </Label>
                  <Accordion prefHeight="344.0" prefWidth="296.0">
                    <panes>
                      <TitledPane animated="false" text="Tiles">
                           <content>
                              <ScrollPane fx:id="tileScrollPane" fitToWidth="true" prefHeight="285.0" prefWidth="248.0" />
                           </content>
                      </TitledPane>
                      <TitledPane animated="false" text="Enemies">
                           <content>
                              <ScrollPane fx:id="entityScrollPane" fitToWidth="true" prefHeight="285.0" prefWidth="248.0" />
                           </content>
                      </TitledPane>
                      <TitledPane animated="false" prefHeight="266.0" prefWidth="296.0" text="Players">
                        <content>
                          <ScrollPane fx:id="playerScrollPane" fitToWidth="true" prefHeight="285.0" prefWidth="248.0" />
                        </content>
                      </TitledPane>
                    </panes>
                  </Accordion>
               </children>
            </VBox>
         </children>
      </AnchorPane>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="244.0">
         <children>
            <VBox fx:id="vbox" prefHeight="398.0" prefWidth="279.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label alignment="CENTER" prefHeight="40.0" prefWidth="279.0" text="Import texture as...">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="46.0" prefWidth="279.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addTile" prefHeight="25.0" prefWidth="47.0" text="Tile" />
                        <Button mnemonicParsing="false" onAction="#addEntity" text="Enemy" />
                        <Button mnemonicParsing="false" onAction="#addPlayer" text="Player" />
                     </children>
                  </HBox>
                  <BorderPane>
                     <center>
                        <ImageView fx:id="imgView" fitHeight="150.0" fitWidth="239.0" pickOnBounds="true" preserveRatio="true" />
                     </center>
                  </BorderPane>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Name:" HBox.hgrow="NEVER" />
                        <TextField fx:id="nameField" prefHeight="25.0" prefWidth="126.0" styleClass="button" stylesheets="@../css/text-fields.css" HBox.hgrow="ALWAYS" />
			          <Button fx:id="btnAdd" disable="true" mnemonicParsing="false" onAction="#addBtnClicked" text="Add" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      
   </children>
</HBox>
